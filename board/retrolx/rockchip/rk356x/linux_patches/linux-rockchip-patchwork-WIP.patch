+static void vop2_grf_writel(struct vop2 *vop2, const struct vop_reg *reg,
+				   uint32_t v)
+{
+	uint32_t val = 0;
+
+	if (IS_ERR_OR_NULL(vop2->grf))
+		return;
+
+	if (reg->mask) {
+		val = (v << reg->shift) | (reg->mask << (reg->shift + 16));
+		regmap_write(vop2->grf, reg->offset, val);
+	}
+}
