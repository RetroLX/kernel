+static void vop2_crtc_enable_irq(struct vop2_video_port *vp, uint32_t irq)
+{
+	struct vop2 *vop2 = vp->vop2;
+
+	vop2_writel(vop2, vp->data->regs->irq_clear, irq << 16 | irq);
+	vop2_writel(vop2, vp->data->regs->irq_enable, irq << 16 | irq);
+}
